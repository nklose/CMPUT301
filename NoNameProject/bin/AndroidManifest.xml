<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nonameproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission
        android:name="android.permission.INTERNET"></uses-permission>
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.EditLocalTaskActivity"
            android:label="@string/title_activity_edit_local_task" >
            <intent-filter>
                <action android:name="android.support.PARENT_ACTIVITY" />

                <category android:name="com.example.nonameproject.Activities.MainActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AddTaskActivity"
            android:label="@string/title_activity_add_task" >
            <intent-filter>
                <action android:name="android.support.PARENT_ACTIVITY" />

                <category android:name="com.example.nonameproject.Activities.MainActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ViewLocalTasksActivity"
            android:label="@string/title_activity_view_local_tasks" >
            <intent-filter>
                <action android:name="android.support.PARENT_ACTIVITY" />

                <category android:name="com.example.nonameproject.Activities.MainActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ViewSharedTasksActivity"
            android:label="@string/title_activity_view_shared_tasks" >
            <intent-filter>
                <action android:name="android.support.PARENT_ACTIVITY" />

                <category android:name="com.example.nonameproject.Activities.MainActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.SendEmailActivity"
            android:label="@string/title_activity_send_email" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.TakeImageActivity"
            android:label="@string/title_activity_take_image" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>